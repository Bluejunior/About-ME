#include <stdio.h>
void main()
{
  int a, b = 0, c;
  printf("\n\nEnter a row of number to check if it's a palindrome or not\n");
  printf("\nEnter the number : ");
  scanf("%d", &a);

  c = a;

  while (c != 0)
  {
    b = b * 10;
    b = b + c%10;
    c = c/10;
  }
  if (a == b)
    printf("it is a palindrome number.\n\n", a);
  else
    printf("it is not a palindrome number.\n\n", a);
}
